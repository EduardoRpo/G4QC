# Configuración G4QC Trading Platform
# Copiar este archivo a .env y ajustar los valores según sea necesario

# Modo Debug (True/False)
DEBUG=False

# Base de Datos PostgreSQL
# Para desarrollo local sin Docker:
# DATABASE_URL=postgresql://g4qc:g4qc_dev@localhost:5432/g4qc_db
# Para Docker (usar nombres de servicios):
DATABASE_URL=postgresql://g4qc:g4qc_dev@postgres:5432/g4qc_db

# Redis Cache
# Para desarrollo local sin Docker:
# REDIS_URL=redis://localhost:6379
# Para Docker (usar nombres de servicios):
REDIS_URL=redis://redis:6379

# Interactive Brokers Configuration
# Host donde está corriendo TWS o IB Gateway
IB_HOST=127.0.0.1
# Puerto: 7497 para paper trading, 7496 para live trading
IB_PORT=7497
# ID de cliente único para la conexión
IB_CLIENT_ID=1

# MetaTrader 5 Configuration (Opcional)
# Ruta de instalación de MT5 (solo Windows)
MT5_PATH=
# Credenciales de MT5
MT5_LOGIN=0
MT5_PASSWORD=
MT5_SERVER=

# CORS Origins (configurado en código, pero puedes agregar más si es necesario)
# Los valores por defecto son:
# - http://localhost:3000
# - http://localhost:5173
# - http://127.0.0.1:3000
# - http://127.0.0.1:5173

